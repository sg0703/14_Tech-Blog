{{#each posts as |post| }}
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">{{post.title}}/h5>
            <h6 class="card-subtitle mb-2 text-muted">{{post.user.name}} on {{post.date_created}}</h6>
            <p class="card-text">{{post.content}}</p>
            <a href="/post/{{post.id}}" class="card-link">View Post and Comments</a>
    </div>
</div>
{{/each}}