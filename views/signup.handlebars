<form id="signup-form">
    <div class="form-group row">
        <label for="email-input-login" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" id="email-input-login" value="email@example.com">
        </div>
    </div>
    <div class="form-group row">
        <label for="username-input-login" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            <input type="text" id="username-input-login">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password-input-login" placeholder="Password">
        </div>
    </div>
    <div class="form-group row">
        <button type="submit">Sign Up</button>
    </div>
</form>

<script src="./js/signup.js"></script>